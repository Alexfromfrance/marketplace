<h1>Les restaurants</h1>

<ul>
<% @restaurants.each do |restaurant| %>
<ol>
  <%= restaurant.name %>
  <%= restaurant.address %>
  <%= restaurant.category %>
  <%= restaurant.stars %>
  <%= link_to "Allez voir", restaurant_path(restaurant) %>
  <%= link_to "Delete", restaurant_path(restaurant), method: :delete %>
</ol>
<% end %>
</ul>


